{
  "name": "dreamiverso-bot",
  "version": "2.0.0",
  "private": false,
  "main": "dist/index.js",
  "author": "Dreamiverso",
  "description": "El bot oficial del Dreamiverso",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "dev": "cross-env NODE_ENV=development tsx watch src/index.ts",
    "lint": "eslint --fix",
    "build:db": "prisma generate",
    "build:ts": "tsc",
    "build": "yarn run-p build:*",
    "start": "cross-env NODE_ENV=production node .",
    "check": "tsc --noEmit",
    "commands:nuke": "cross-env NODE_ENV=production tsx src/scripts/reset.ts",
    "commands:sync": "cross-env NODE_ENV=production tsx src/scripts/sync.ts"
  },
  "dependencies": {
    "@prisma/client": "^4.3.1",
    "common-tags": "^1.8.2",
    "dayjs": "^1.11.5",
    "discord.js": "^14.3.0",
    "fast-glob": "^3.2.12",
    "got": "^12.5.1",
    "happy-dom": "^6.0.4",
    "node-cron": "^3.0.2",
    "prisma": "^4.3.1",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/common-tags": "^1.8.1",
    "@types/node": "^18.7.18",
    "@types/node-cron": "^3.0.4",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.2",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "tsx": "^3.9.0",
    "typescript": "^4.8.3"
  },
  "engines": {
    "node": ">=16.x"
  },
  "prisma": {
    "schema": "src/db/schema.prisma"
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
