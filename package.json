  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/common-tags": "^1.8.1",
    "@types/node": "^18.7.1",
    "@types/node-cron": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
